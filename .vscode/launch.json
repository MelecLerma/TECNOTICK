    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Launch Chrome (localhost:8080)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome (Live Server)",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:5500",  // Puerto típico de Live Server
            "webRoot": "${workspaceFolder}"
        }
    ]
}
